[flake8]
max-line-length = 88
max-complexity = 10
count = True
show-source = True
statistics = True
# ignore E203 (disagrees with PEP8 and Black) and W503 (outdated - replaced by W504)
ignore = E203, W503
# potential to only check a specific list of rules not covered by Black
# select = E9, F63, F7, F82
exclude =
	.svn,
	CVS,
	.bzr,
	.hg,
	.git,
	__pycache__,
	.tox,
	venv/,
	.github,
	*.txt
